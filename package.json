{
  "name": "hawa",
  "repository": "lastonoga/hawa",
  "version": "0.0.6",
  "description": "",
  "main": "dist/index.js",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "alias": {
    "~": "~/.."
  },
  "workspaces": [
    "packages/*"
  ],
  "browser": {
    "fs": false,
    "child_process": false
  },
  "bugs": {
    "url": "https://github.com/lastonoga/hawa/issues"
  },
  "homepage": "https://github.com/lastonoga/hawa#readme",
  "author": "Kirill Burkhanov <me@burkhanov.com> (https://burkhanov.com)",
  "license": "ISC",
  "scripts": {
    "prepare": "yarn clear",
    "prepack": "yarn packages:bundle && yarn bundle",
    "packages:watch": "yarn clear && lerna run --parallel start",
    "packages:bundle": "lerna run --parallel build",
    "watch": "cross-env NODE_ENV=development webpack --config config/webpack.dev.js ",
    "build": "cross-env NODE_ENV=development webpack --config config/webpack.prod.js",
    "bundle": "cross-env NODE_ENV=development webpack --config config/webpack.package.js",
    "clear": "rm -rf ./packages/*/dist"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/preset-env": "^7.10.1",
    "@babel/types": "^7.9.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "cross-env": "^7.0.2",
    "html-webpack-plugin": "^4.3.0",
    "lerna": "^3.20.2",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  }
}
