{
  "name": "sexy-framework",
  "repository": "sexy-framework/sexy",
  "version": "0.0.6",
  "description": "",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "alias": {
    "~": "~/.."
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "browser": {
    "fs": false,
    "child_process": false
  },
  "bugs": {
    "url": "https://github.com/sexy-framework/sexy/issues"
  },
  "homepage": "https://github.com/sexy-framework/sexy#readme",
  "author": "Kirill Burkhanov <kir.burkhanov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn clear && lerna run build && yarn build && cp ./dist ./packages/sexy/dist",
    "packages:watch": "yarn clear && lerna run --parallel start",
    "packages:bundle": "lerna run --parallel build",
    "watch": "cross-env NODE_ENV=development webpack --config config/webpack.dev.js ",
    "build": "cross-env NODE_ENV=development webpack --config config/webpack.prod.js",
    "ssr": "cross-env NODE_ENV=development webpack --config ssr/webpack.config.js ",
    "clear": "rm -rf ./packages/*/dist"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/types": "^7.9.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "html-webpack-plugin": "^4.3.0",
    "lerna": "^3.20.2",
    "mini-css-extract-plugin": "^0.9.0",
    "sass": "^1.26.7",
    "sass-loader": "^8.0.2",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "val-loader": "^2.1.1",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "extra-watch-webpack-plugin": "^1.0.3",
    "fastify": "^2.14.1",
    "fastify-compress": "^2.0.1",
    "fastify-static": "^2.7.0",
    "jsdom": "^16.2.2",
    "navigo": "^7.1.2",
    "webpack-manifest-plugin": "^2.2.0"
  }
}
